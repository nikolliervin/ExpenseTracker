



@model BorrowLanded.Models.Expenses;


<h1 class="align-content-center">Delete Expense</h1>

<div class="mt-3">

<form method="post" asp-action="DeletePost">

	<input asp-for="Id" hidden />

<label asp-for="ExpenseName" class="mt-3"></label>
<input asp-for="ExpenseName" disabled type="text" class="form-control mt-1" placeholder="Expense Name"/>
<label asp-for="ExpenseType" class="mt-3"></label>
<input asp-for="ExpenseType" disabled type="text" class="form-control form-control-solid mt-1" placeholder="Expense Type"/>
<label asp-for="Amount" class="mt-3"></label>
<input asp-for="Amount" disabled type="number" step="0.1" class="form-control form-control-transparent mt-1" placeholder="Expense Amount"/>

<button class="btn btn-primary btn-danger mt-3" type="submit">Delete</button>
<button asp-action="Index" class="btn btn-primary btn-danger mt-3" >Back</button>

</form>


</div>


