

@model IEnumerable<BorrowLanded.Models.Expenses>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
    <h1 class="m-2">Expenses</h1>

    </div>
    <div class="col-6 text-right">
    <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary">Create New Expense</a>

    </div>
    </div>
    
</div>

@if (Model.Count() > 0)
        {
            <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Expense Name</th>
      <th scope="col">Expense Type</th>
      <th scope="col">Expense Amount</th>
      
    </tr>
  </thead>
  <tbody>

      @foreach(var item in Model){
     <tr>
      <th scope="row">@item.Id</th>
      <th scope="row">@item.ExpenseName</th>
      <th scope="row">@item.ExpenseType</th>
      <td scope="row">@item.Amount</td>
      <td scope="row">
           <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
           <a asp-controller="Expenses" asp-action="DeletePost" asp-route-Id="@item.Id" class="btn btn-danger" mx-1>Delete</a>
      </td>
      <td></td>
    </tr>
        

      }
    

  </tbody>
</table>

        }
        else{
            <h2>No items created yet</h2>
        }