



@model BorrowLanded.Models.Expenses;


<h1 class="align-content-center">Create Expense</h1>

<div class="mt-3">

<form method="post" asp-action="Create">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>	

<label asp-for="ExpenseName" class="mt-3"></label>
<input asp-for="ExpenseName" type="text" class="form-control mt-1" placeholder="Expense Name"/>
<span asp-validation-for="ExpenseName" class="text-danger"></span>
<label asp-for="ExpenseType" class="mt-3"></label>
<input asp-for="ExpenseType" type="text" class="form-control form-control-solid mt-1" placeholder="Expense Type"/>
<label asp-for="Amount" class="mt-3"></label>
<input asp-for="Amount" type="number" step="0.1" class="form-control form-control-transparent mt-1" placeholder="Expense Amount"/>
<button class="btn btn-primary btn-light mt-3" type="submit">Create</button>
<span asp-validation-for="Amount" class="text-danger m-5"></span>

</form>


</div>


